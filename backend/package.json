{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build": "npm tsc",
    "dev": "NODE_ENV=development npx ts-node-dev --transpile-only ./src/server.ts",
    "start:prod": "NODE_ENV=production node ./dist/server.js",
    "start": "node ./dist/server.js",
    "start:staging": "NODE_ENV=staging node ./dist/server.js",
    "git:push": "npm version patch && git push",
    "test:watch": "vitest --reporter verbose --globals",
    "test": "vitest --run --globals",
    "benchmark": "vitest bench --run --globals",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nanoid": "^5.1.5",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.2",
    "socketio": "^1.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/ejs": "^3.1.4",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.10",
    "@types/nodemailer": "^6.4.13",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
